@model ERPSystem.Models.Customer

@using (Html.BeginForm("AddUpdateCustomer", "Customer", FormMethod.Post))
{
    <input type="hidden" name="CustomerNo" value="@Model.CustomerNo"/>
    <div class="form-group row">
        <label for="CustomerName" class="col-sm-3 col-form-label">Customer Name</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="CustomerName" name="CustomerName" required value="@Model.CustomerName">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="Country" class="col-sm-3 col-form-label">Country</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="Country" name="Country" maxlength="3" required value="@Model.Country">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="City" class="col-sm-3 col-form-label">City</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="City" name="City" required value="@Model.City">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="Streetaddress" class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="Streetaddress" name="Streetaddress" required value="@Model.Streetaddress">
        </div>
    </div>
    
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="VIP" name="VIP" value="true" checked="@Model.VIP">
            <label class="form-check-label" for="VIP">
                Add VIP status for customer
            </label>
        </div>
    </div>
    <div class="modal-footer" style="margin-left: -1rem; margin-right: -1rem;">
        <button type="submit" class="btn btn-outline-primary">Submit</button>
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
    </div>
}
