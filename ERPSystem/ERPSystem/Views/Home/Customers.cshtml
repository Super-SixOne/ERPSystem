@model ERPSystem.Models.CustomerCollection;
@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between mb-3">
    <h1>Customers (@Model.Count)</h1>
    <button type="button" class="btn btn-outline-dark" data-toggle="tooltip" title="Add new customer">
        <i class="fas fa-user-plus"></i>
    </button>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">VIP</th>
        <th scope="col">Customer No</th>
        <th scope="col">Customer Name</th>
        <th scope="col">Country</th>
        <th scope="col">City</th>
        <th scope="col">Address</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
         @foreach (var customer in Model)
            {
                <tr>
                    <td>@if (customer.VIP) {<i class="fas fa-gem"></i>}</td>
                    <td>@customer.CustomerNo</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.Country</td>
                    <td>@customer.City</td>
                    <td>@customer.Streetaddress</td>
                    <td>
                        <div class="float-right">
                             <button type="button" class="btn btn-outline-success" data-toggle="tooltip" title="Edit current customer">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button type="button" class="btn btn-outline-danger" data-toggle="tooltip" title="Delete current customer">
                                <i class="fas fa-user-slash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>


